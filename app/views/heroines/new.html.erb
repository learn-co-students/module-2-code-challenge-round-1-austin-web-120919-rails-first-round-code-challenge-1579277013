<h1>Create a new Heroine!</h1>
<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <br>
    <%= f.label :powers %>
    <%= f.collection_select :power_ids, Power.all, :id, :name %>

    <%= f.submit %>

<% end %>
<% if @heroine.errors.any? %>
    <ul>
    <%= @heroine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>