<h1>Create a new Heroine!</h1>
<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <br>
    <%= f.fields_for :heroine_powers, @heroine.heroine_powers.build do |ff| %>
        <%= ff.collection_select :power_id, Power.all, :id, :name %>
    <% end %>

    <%= f.submit %>

<% end %>
<% if @heroine.errors.any? %>
    <ul>
    <%= @heroine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>